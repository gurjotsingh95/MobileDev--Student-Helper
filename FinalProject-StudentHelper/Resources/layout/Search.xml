<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background = "@drawable/profileback2">
      <SearchView
       android:layout_margin="20dp"
       android:layout_height="60dp"
       android:layout_width="match_parent"       
       android:background="@drawable/myedittext"
       android:id="@+id/searchID"
    />
    <Button
        android:id ="@+id/advancedSearch"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="10dp"
        android:text="advanced search"
        android:textColor="#f54e5f"
        android:background="@drawable/advancedsearchbutton"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="-60dp"
    />
    <RadioGroup
        android:id="@+id/searchTypeRG"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="0dp"
         android:orientation="horizontal"
        android:layout_marginLeft="50dp" >

        <RadioButton
            android:id="@+id/NameSearchID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:text="Name"        />
        <RadioButton
            android:id="@+id/EmailSearchID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"        />
    </RadioGroup>

        <ListView    
            android:background="#00000000"
            android:layout_marginTop="20dp"
            android:id="@+id/listViewID"
            android:layout_margin="2dp"
            android:layout_width="400dp"
            android:layout_height="fill_parent"
           />   
   

</LinearLayout>
